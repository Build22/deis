{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata":{
    "name": "deis-database",
    "labels": {
      "name": "deis-database"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "name": "deis-database"
    },
    "template": {
      "metadata": {
          "labels": {
            "name": "deis-database"
          }
      },
      "spec": {
        "containers": [
          {
            "name": "deis-database",
            "image": "192.168.0.19:5000/deis/database:git-b5d3017",
            "env": [
              {
                "name" : "AWS_ACCESS_KEY_ID",
                "value" : "CHANGEME"
              },
              {
                "name" : "AWS_SECRET_ACCESS_KEY",
                "value" : "CHANGEME"
              },
              {
                "name" : "WALE_S3_PREFIX",
                "value" : "s3://deis"
              }
            ],
            "ports": [
              {
                "name": "db-port",
                "containerPort": 5432
              }
            ],
            "readinessProbe": {
              "exec": {
                "command": [
                  "is_master"
                ]
              },
              "initialDelaySeconds": 0,
              "timeoutSeconds": 0
            }
          }
        ]
      }
    }
  }
}
