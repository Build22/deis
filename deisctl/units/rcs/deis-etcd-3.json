{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"deis-etcd-3",
      "labels":{
         "name":"deis-etcd-3"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"deis-etcd-3"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"deis-etcd-3"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"deis-etcd-3",
                  "image":"deis-etcd:0",
                   "env":[
                     {
                       "name" : "ETCD_INITIAL_CLUSTER_STATE",
                       "value" : "new"
                     }
                   ]
               }
            ]
         }
      }
   }
}
